<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What library would you like to use?"
            android:id="@+id/mainTextView"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 FPS Mod"
            android:id="@+id/btn60Fps"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="btn60Fps" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 FPS Mod"
            android:id="@+id/btn120FPS"
            android:layout_gravity="center_horizontal"
            android:onClick="btn120Fps" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:id="@+id/btnStock"
            android:layout_gravity="center_horizontal"
            android:onClick="btnStock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current"
            android:id="@+id/currentLibLabel"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentLibValue"
            android:layout_gravity="center_horizontal"
            android:textSize="50dp"
            android:textColor="#f44336"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
